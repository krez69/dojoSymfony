{% extends 'base.html.twig' %}

{% block title %}Hello LanguageController!{% endblock %}

{% block body %}
 <ul>
     {% for language in languages %}
     <li>
         <a href="{{ path('language_show', {'id': language.id } ) }}">{{ language.name }}</a>
         <ul>
         {% for framework in language.frameworks %}
            <li>{{ framework.name }}
                <ul>
                    {% for type in framework.types %}
                        <li>{{ type.name }}</li>
                    {% endfor %}
                </ul>
            </li>
         {% endfor %}
         </ul>
     </li>
     {% endfor %}
 </ul>


{% endblock %}
